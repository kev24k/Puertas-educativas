---
import Paragraph from "../shared/Paragraph.astro";

export interface Props {
    title: string;
    description: string;
    cupos: string;
    costo: string;
    img: string;
    distrito:string;
}

const { title, description, cupos, costo, img, distrito } = Astro.props;

---


    <div class="p-5 sm:p-6 lg:p-8 rounded-3xl border border-box-border bg-box-bg shadow-lg shadow-box-shadow relative overflow-hidden">
        <div class="p-3 text-heading-1 grid place-content-center border-collapse">
            <img src={img} class="rounded-xl grid place-content-center relative" />
        </div>
        <div class="mt-6 space-y-4 relative">
            <h2 class="text-lg md:text-xl font-semibold text-heading-2">
                {title}
            </h2>
            <p class="md:text-l font-bold text-heading-2">
                Costo de Matricula: S/.{costo}
            </p>
            <Paragraph>
                {description}
            </Paragraph>
            <p class="text-white font-bold text-base">
                Cupos Encontrados: {cupos}
            </p>
            <span class="absolute w-32 aspect-square -bottom-16 -right-16 bg-primary/10 rounded-full" />
        </div>
    </div>

